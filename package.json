{
  "name": "express-toolkit",
  "private": true,
  "description": "A toolkit to handle Express.js requests easier",
  "author": "Junmin Ahn",
  "license": "MIT",
  "scripts": {
    "format": "git ls-files '*.js' '*.ts' | xargs prettier --write",
    "lint": "lerna run lint",
    "bootstrap": "lerna bootstrap",
    "llink": "lerna link",
    "clean": "lerna clean",
    "test": "lerna run test",
    "release": "lerna version --exact --no-changelog --no-push --no-git-tag-version && lerna publish from-package --dist-tag next"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "chalk": "^5.0.1",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "yargs": "^17.4.1"
  }
}
