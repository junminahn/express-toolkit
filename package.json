{
  "name": "express-toolkit",
  "private": true,
  "description": "A toolkit to handle Express.js requests easier",
  "author": "Junmin Ahn",
  "license": "MIT",
  "scripts": {
    "format": "git ls-files '*.js' '*.ts' | xargs prettier --write",
    "lint": "lerna run lint",
    "bootstrap": "lerna bootstrap",
    "llink": "lerna link",
    "clean": "lerna clean",
    "test": "lerna run test",
    "release": "lerna version --exact --no-changelog --no-push --no-git-tag-version && lerna publish from-package --dist-tag next"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "chalk": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "yargs": "^17.3.1"
  }
}
